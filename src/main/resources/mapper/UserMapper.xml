<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="two.example.demo.dao.UserDao">
    <select id="findAll" resultType="two.example.demo.eneity.User">
        select * from User;
    </select>
    <select id="findById" parameterType="string" resultType="two.example.demo.eneity.User">
        select * from User where id=#{id};
    </select>
    <insert id="insertUser" parameterType="two.example.demo.eneity.User">
        insert into User(id,password,isorder,name,address) values (#{id},#{password},#{isorder},#{name},#{address});
    </insert>
    <delete id="deleteUser" parameterType="String">
        delete from User where id=#{id};
    </delete>
    <update id="updateUser">
        update User
        <set>
            <if test="param2!=null">
                password=#{param2},
            </if>
            <if test="param3!=null">
                isorder=#{param3},
            </if>
            <if test="param4!=null">
                name=#{param4},
            </if>
            <if test="param5!=null">
                address=#{param5}
            </if>
            where id=#{param1}
        </set>
    </update>
</mapper>